{
    "manifest_version": 2,
    "name": "yggtorrent ratio",
    "version": "1.2.0",

    "description": "Adds the ratio between seeders and leechers on all tables for the yggtorrent.com site",

    "permissions": ["storage", "tabs"],

    "icons": {
        "48": "icons/yggratio-48.png"
    },

    "content_scripts": [
      {
          "matches": ["*://yggtorrent.com/*", "*://*.yggtorrent.com/*"],
          "exclude_matches": ["*://wiki.yggtorrent.com/*", "*://forum.yggtorrent.com/*"],
          "js": ["ratio.js"]
      }
    ],
    "background": {
        "scripts": ["background.js"]
    },

    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },

    "page_action": {
        "default_icon": "icons/yggratio-48.png",
        "default_title": "préférences yggtorrent-ratio"
    }
}
