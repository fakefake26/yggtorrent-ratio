{
    "manifest_version": 2,
    "name": "yggtorrent ratio",
    "short_name": "ygg ratio",
    "version": "3.1.12",

    "applications": {
        "gecko": {
            "id": "{fb6250f1-d852-46df-b71e-dd4fac6a4b65}"
        }
    },

    "description": "__MSG_extensionDescription__",
    "homepage_url": "https://github.com/fakefake26/yggtorrent-ratio",
    "default_locale": "en",
    "permissions": ["storage"],

    "icons": {
        "48": "icons/logo-48x48.png"
    },

    "content_scripts": [
        {
          "matches": [
            "https://*/*"
        ],
        "include_globs": [
            "https://*.yggtorrent.*/*",
            "https://yggtorrent.*/*"
        ],
        "exclude_globs": [
            "https://wiki.yggtorrent.*/*",
            "https://forum.yggtorrent.*/*",
            "https://*.yggtorrent.*/forum/*",
            "https://yggtorrent.*/forum/*",
            "https://*.yggtorrent.*/user/*",
            "https://yggtorrent.*/user/*",
            "https://*.yggtorrent.*/donation/bonus",
            "https://yggtorrent.*/donation/bonus",
            "https://*.yggtorrent.*/rss*",
            "https://yggtorrent.*/rss*",
            "https://*.yggtorrent.*/user_messaging",
            "https://yggtorrent.*/user_messaging"
        ],
          "js": ["ratio.js"]
        }
    ],

    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    }
}
