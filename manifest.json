{
    "manifest_version": 2,
    "name": "yggtorrent ratio",
    "version": "1.2.0",

    "description": "Adds the ratio between seeders and leechers on all tables for the yggtorrent.com site",

    "permissions": ["storage"],

    "icons": {
        "48": "icons/yggratio-48.png"
    },

    "content_scripts": [
      {
          "matches": ["*://yggtorrent.com/*", "*://*.yggtorrent.com/*"],
          "exclude_matches": ["*://wiki.yggtorrent.com/*", "*://forum.yggtorrent.com/*"],
          "js": ["ratio.js"]
      }
    ],

    "options_ui": {
        "page": "options.html",
        "browser_style": true
    }
}
